<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HardwareStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/StyleHeader.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-warning bg-warning">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">HardwareStore</a>
                <img src="img/Ferreteria.png" alt="" id="img">
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Productos" asp-action="IndexUsuario">Tienda</a>
                        </li>

                        @if (ViewBag.Id != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="Usuarios" asp-action="Index">Mi Perfil</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="Usuarios" asp-action="CerrarSesion">Cerrar Sesión</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Usuarios" asp-action="LoginUsuario">Iniciar Sesión</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Usuarios" asp-action="AgregarUsuario">Registrarse</a>
                            </li>
                        }
                        @if (ViewBag.Rol == 0)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Productos" asp-action="IndexAdmin">Administrar Productos</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Usuarios" asp-action="AgregarAdmin">Administrar Usuarios</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer>


        <h5 id="container" class="h5-warning bg-warning"> &copy; Derechos Reservados :: HardwareStore &copy; </h5>


    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
