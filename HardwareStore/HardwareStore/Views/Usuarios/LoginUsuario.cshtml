@{
    ViewData["Title"] = "LogIn";
}
@model Usuario

<link rel="stylesheet" href="~/css/StyleLogin.css" />

<div class="continer">
    @if (TempData["mensajeLoginFallo"] != null)
    {
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
            <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
        </svg>
        @TempData["mensajeLoginFallo"]
    </div>
    }
    <div class="row content" id="contenido">
        <div class="col-md-6 mb-3">
            <img src="~/img/Ferreteria.png" class="img-fluid" alt="image">
        </div>
        <div class="col-md-6" id="conteni">
            <br>
            <br>
            <br>
            <h3 class="signin-text mb-3">Iniciar Sesión</h3>
            <img src="~/img/configuraciones.png" alt="image" class="img-fluid" id="im">
            <br>
            <form asp-controller="Usuarios" asp-action="LoginUsuario" method="post">
                <div class="form-group">
                    <br>
                    <label asp-for="Correo">Usuario</label>
                    <input asp-for="Correo" type="email" class="form-control">
                </div>
                <br>
                <br>
                <div class="form-group">
                    <label asp-for="Password">password</label>
                    <input asp-for="Password" type="password" class="form-control">
                </div>
                <br>
                <br>
                <input type="submit" value="Iniciar Sesión" class="btn btn-warning">
            </form>
        </div>
    </div>
</div>
