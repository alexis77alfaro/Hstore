@model IEnumerable<Producto>
    <br />
    <br />
    <br />
<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <h3>Lista de Productos</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-controller="Productos" asp-action="AgregarProducto">Agregar Nuevo Producto</a>
        </div>
    </div>
    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th scope="col">@Html.DisplayNameFor(m => m.Id)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.NombreProducto)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.PrecioInicial)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.PrecioVenta)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.Stock)</th>
                        <th scope="col">Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.NombreProducto</td>
                            <td>@item.PrecioInicial</td>
                            <td>@item.PrecioVenta</td>
                            <td>@item.Stock</td>
                            <td>
                                <a asp-controller="Productos" asp-action="EditarProducto" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                                <a asp-controller="Productos" asp-action="EliminarProducto" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No existen productos registrados!</p>
        }
    </div>
</div>